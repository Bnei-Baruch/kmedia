- title "Admin/Assets"
= paginate @assets
%br
%table.admin_table
  %tr
    %th ID
    %th File name
    %th Created on
    %th Updated on
    %th Language
    %th(colspan=3) Actions
  - @assets.each do |asset|
    %tr
      %td= asset.fileid
      %td= asset.filename
      %td= asset.created.try(:to_date)
      %td= asset.updated.try(:to_date)
      %td= asset.filelang
      %td= link_to 'Show', [:admin, asset]
      %td= link_to_if can?(:update, @asset), "Edit", edit_admin_asset_path(asset)
      %td= link_to_if can?(:destroy, asset), "Destroy", [:admin, asset], :confirm => 'Are you sure?', :method => :delete
%br
= paginate @assets
%br
%p= link_to "New Asset", new_admin_asset_path

%header.subhead#overview
  %h2 Files
  %p
    = link_to_if can?(:create, FileAsset), "New FileAsset", new_admin_file_asset_path, :class => 'btn btn-success btn-large pull-right' do
      .unable New FileAsset

%section
  = paginate @file_assets

  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
      %th ID
      %th FileAsset name
      %th Recorded at
      %th Created on
      %th Updated on
      %th Language
      %th(colspan=3) Actions
    %tbody
      - @file_assets.each do |asset|
        %tr
          %td= link_to asset.fileid, asset.url, :target => '_blank'
          %td= asset.filename
          %td= asset.filedate.try(:to_date)
          %td= asset.created.try(:to_date)
          %td= asset.updated.try(:to_date)
          %td= asset.filelang
          %td= link_to 'Show', [:admin, asset]
          %td
            = link_to_if can?(:update, @asset), "Edit", edit_admin_file_asset_path(asset) do
              %span.unable Edit
          %td
            = link_to_if can?(:destroy, asset), "Destroy", [:admin, asset], :confirm => 'Are you sure?', :method => :delete do
              %span.unable Destroy

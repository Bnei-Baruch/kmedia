%header.subhead#overview
  %h2 Catalog
  .subnav
    %ul.nav.nav-pills
      %li
        = link_to_if can?(:update, @catalog), "Edit", edit_admin_catalog_path(@catalog) do
          %a.unable Edit
      %li
        = link_to_if can?(:destroy, @catalog), "Destroy", admin_catalog_path(@catalog), :class => 'label label-important', :confirm => 'Are you sure?', :method => :delete do
          %a.unable Destroy
      %li= link_to "View All", admin_catalogs_path

%section.well
  %p
    %strong Catalog:
    - if @catalog.parent
      = @catalog.parent.catalognodename
      (
      = @catalog.parentnodeid
      ) /
    %span.bold
      = @catalog.catalognodename
      (
      = @catalog.catalognodeid
      )
  = display_show_item('Created', @catalog.created.to_s(:long_ordinal))
  = display_show_item('Updated', @catalog.updated.to_s(:long_ordinal))

%section
  %strong Descriptions:
  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th Language
        %th Catalog Description
        %th Created on
        %th Updated on
        %th ID
    %tbody
      - @catalog.catalog_descriptions.each do |admin_catalog_desc|
        %tr
          %td= admin_catalog_desc.lang
          %td= admin_catalog_desc.catalognodename
          %td= admin_catalog_desc.created.try(:to_date)
          %td= admin_catalog_desc.updated.try(:to_date)
          %td= admin_catalog_desc.catalognodeid

%section
  %strong Containers:
  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th Id
        %th Name
        %th Type
        %th Secure
        %th Language
        %th Updated on
    %tbody
      - @lessons.each do |lesson|
        %tr
          %td= lesson.lessonid
          %td= lesson.lessonname
          %td= lesson.content_type.try(:name)
          %td= display_secure(lesson.secure)
          %td= lesson.language
          %td= lesson.updated

<h3><%= @user.email %></h3>
 
<%= link_to_if(can?(:update,@user), "Edit", edit_admin_user_path(@user)) %> |
<%= link_to_if(can?(:delete, @user), "Delete", admin_user_path(@user), :confirm => "Are you sure?", :method => :delete) {} %>
 
<table class="one-column-emphasis">
<tbody>
	<tr>
		<td class="oce-first">Email:</td>
		<td><%= @user.email %></td>
	</tr>
	<tr>
		<td class="oce-first">Roles:</td>
		<td><%= @user.roles.collect{|r| r.name}.join(', ') %></td>
	</tr>
    <% if can?(:see_timestamps,User) %>
        <tr>
            <td class="oce-first">Created at:</td>
            <td><%= @user.created_at %></td>
        </tr>
        <tr>
            <td class="oce-first">Last Sign In:</td>
            <td><%= @user.last_sign_in_at %></td>
        </tr>
        <tr>
            <td class="oce-first">Sign In Count:</td>
            <td><%= @user.sign_in_count %></td>
        </tr>
	<% end %>
</tbody>
</table>

<header class="subhead" id="overview"><h2>Sign up</h2></header>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'well form-horizontal' }) do |f| %>
    <%= f.input :email, :label => 'Email', :input_html => { :class => 'span5' } %>
    <%= f.input :password, :label => 'Password', :placeholder => 'at least 6 chars', :input_html => { :class => 'span5' } %>
    <%= f.input :password_confirmation, :label => false, :placeholder => 'Password Confirmation', :input_html => { :class => 'span5' } %>

    <div class="form-actions">
      <button class="btn btn-primary btn-large" type="submit" data-disable-with='Please wait...'>Sign up</button>
    </div>
<% end %>

<%= render :partial => "devise/shared/links" %>

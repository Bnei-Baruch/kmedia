<header class="subhead" id="overview"><h2>Forgot your password?</h2></header>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :method => :post, :html => { :class => 'well form-horizontal' }) do |f| %>
    <%= f.input :email, :label => 'Email', :input_html => {:class => 'span5'} %>

    <div class="form-actions">
      <button class="btn btn-primary btn-large" type="submit" data-disable-with='Please wait...'>Send me reset password instructions</button>
    </div>
<% end %>

<%= render :partial => "devise/shared/links" %>

.navbar.navbar-fixed-top
  .navbar-inner
    .container
      - if current_user
        - user = "<span class='brand-user'>#{current_user.email}(#{current_user.roles.collect{|r| r.name}.join(', ')})</span>".html_safe
      - else
        - user = ''
      =link_to "Kabbalah Media #{user}".html_safe, '#', :class => 'brand'

      %ul.nav
        %li
          - if current_user
            = link_to_if current_user, 'Logout', destroy_user_session_path, :class => 'brand logout'
          - else
            = link_to 'Login', new_user_session_path, :class => 'login'

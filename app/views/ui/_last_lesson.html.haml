.item
  .padding-both
    %h4.clearfix
      %a.pull-left
        = @last_lesson.lessonname
        = @last_lesson.created.strftime '%Y-%02m-%02d'
      .pull-right
        - if @prev_lesson
          = link_to '<', url_for(:before_lesson => @last_lesson.lessonid)
        - else
          &lt;
        - if @next_lesson
          = link_to '>', url_for(:after_lesson => @last_lesson.lessonid)
        - else
          &gt;
    - available_languages = @last_lesson
    .languages-bar
      %ul.nav.nav-tabs
        %li.tabs-title Available languages:
        %li.active
          %a{:href => '#he-player', :'data-toggle' => 'tab'} HE
        %li
          %a{:href => '#en-player', :'data-toggle' => 'tab'} EN
        %li
          %a{:href => '#es-player', :'data-toggle' => 'tab'} ES
        %li
          %a{:href => '#jp-player', :'data-toggle' => 'tab'} JP
  .tab-content
    #he-player.tab-pane.active.fade.in
      .row
        .span5
          .padding-left
            %h4.pull-left Play:

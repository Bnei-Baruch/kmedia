              %a.right-switch-link(href="javascript:;") audio
              .switch
                %i.icon-km-small-video>
                %i.icon-km-small-audio>
                .left.btn.btn-mini.btn-primary(href="javascript:;")>
                  %i.icon-km-small-white-video>
              %a.left-switch-link(href="javascript:;") video
            %img(src="https://dl.dropbox.com/u/208274/player.gif")
            .btn-toolbar
              .btn-group
                %button.active.btn.btn-mini Preparation
